<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.helen.helen_oktavia_1202152325_modul3.Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="103dp"
        android:layout_above="@+id/passForm"
        android:layout_alignEnd="@+id/userForm"
        android:layout_alignRight="@+id/userForm"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        app:srcCompat="@drawable/aqua" />

    <EditText
        android:id="@+id/userForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="151dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passForm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Login"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="312dp" />

    <EditText
        android:id="@+id/passForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userForm"
        android:layout_alignStart="@+id/userForm"
        android:layout_below="@+id/userForm"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="232dp" />

</RelativeLayout>



